{
  "extends": "@tooling/tsconfig/base.json",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"],
      "@domain/*": ["./src/domain/*"],
      "@application/*": ["./src/application/*"],
      "@presentation/*": ["./src/presentation/*"],
      "@infrastructure/*": ["./src/infrastructure/*"]
    }
  },
  "exclude": ["node_modules", "coverage", "dist"]
}
