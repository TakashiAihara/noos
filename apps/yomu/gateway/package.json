{
  "name": "@yomu/gateway",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage --passWithNoTests",
    "test:unit": "vitest run --config vitest.unit.config.ts --passWithNoTests",
    "test:integration": "vitest run --config vitest.integration.config.ts --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules coverage"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.2",
    "@grpc/proto-loader": "^0.7.13",
    "hono": "^4.6.14",
    "@hono/node-server": "^1.13.6",
    "zod": "^3.24.1",
    "@yomu/grpc-contracts": "workspace:*",
    "@yomu/shared": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.1",
    "@vitest/coverage-v8": "^2.1.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  }
}
