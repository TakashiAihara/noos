  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "**/*.test.ts", "**/*.spec.ts"],
  "references": [{ "path": "../../packages/shared" }, { "path": "../../packages/grpc-contracts" }]
}
