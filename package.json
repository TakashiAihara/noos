{
  "name": "noos",
  "version": "0.0.1",
  "private": true,
  "license": "ISC",
  "author": "TakashiAihara",
  "scripts": {
    "analyze": "pnpm analyze:check",
    "analyze:check": "biome check --verbose --log-level=debug",
    "analyze:check:ci": "pnpm analyze:check --log-level=debug --reporter=github",
    "analyze:check:staged": "pnpm analyze:check --staged --no-errors-on-unmatched",
    "analyze:check:unsafe": "pnpm analyze:check --unsafe",
    "analyze:write": "biome check --write",
    "build": "pnpm --filter '@packages/shared-*' build && pnpm --filter '@packages/env' build && pnpm --filter '@packages/db' build && pnpm --filter '@core/*' build && pnpm --filter '@user/*' build",
    "clean": "git clean -dfx .turbo node_modules",
    "db:format": "turbo db:format",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:migrate:deploy": "turbo db:migrate:deploy",
    "db:migrate:status": "turbo db:migrate:status",
    "db:pull": "turbo db:pull",
    "db:push": "turbo db:push",
    "db:rollback": "turbo db:rollback",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "doc:arch:generate": "d2 docs/architecture.d2 docs/architecture.svg",
    "doc:arch:watch": "pnpm doc:arch:generate --watch",
    "format": "pnpm format:write && pnpm format:packages && pnpm -r format",
    "format:check": "biome format",
    "format:docker-compose": "dclint . --fix",
    "format:packages": "sort-package-json 'apps/**/package.json' 'packages/**/package.json' 'tooling/**/package.json' -i '**/node_modules/**'",
    "format:write": "biome format --write",
    "lint:check": "biome lint",
    "lint:write": "biome lint --write",
    "start": "turbo start",
    "start:debug": "turbo start:debug",
    "start:dev": "turbo start:dev",
    "start:dev:watch": "turbo watch start:dev",
    "start:prod": "turbo start:prod",
    "test": "turbo test",
    "test:all": "turbo test:all",
    "test:benchmark": "turbo test:benchmark",
    "test:cov": "turbo test:cov",
    "test:integration": "turbo test:integration",
    "test:snapshot:update": "turbo test:snapshot:update",
    "test:unit": "turbo test:unit",
    "test:watch": "turbo test:watch",
    "turbo:init": "turbo login && turbo link",
    "type:check": "turbo type:check"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@tsconfig/strictest": "catalog:",
    "dclint": "^2.2.2",
    "sort-package-json": "catalog:",
    "turbo": "^2.4.4"
  },
  "packageManager": "pnpm@10.7.0",
  "engines": {
    "node": ">=22.14.0",
    "npm": "DO NOT USE NPM",
    "pnpm": "10.7.0",
    "yarn": "DO NOT USE YARN"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@swc/core",
      "esbuild",
      "prisma"
    ],
    "ignoredBuiltDependencies": ["@nestjs/core"]
  }
}
